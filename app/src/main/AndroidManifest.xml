<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.montherland" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".HomeActivity" >
        </activity>
        <activity
            android:name=".CustomerDetails"
            android:label="@string/customer_details_title" >
        </activity>
        <activity
            android:name=".CreatePurchaseOrder"
            android:label="@string/Create_order_title"
            android:windowSoftInputMode="adjustPan" >

        </activity>
        <activity
            android:name=".CreateAddress"
            android:label="@string/create_address_title" >

        </activity>
        <activity
            android:name=".SelectAddress"
            android:label="@string/select_address_title" >
        </activity>
        <activity
            android:name=".OrderConfirmDetails"
            android:label="@string/confirm_details_title"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".NavigataionActivity"
            android:label="Motherland"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PurchaseOrderActivity"
            android:label="@string/Create_order_title" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".PurchaseOrderDetails" android:label="Purchase Order Details">

        </activity>
    </application>

</manifest>
