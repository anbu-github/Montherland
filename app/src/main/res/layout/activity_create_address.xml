<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.montherland.CreateAddress">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 1*"
                android:id="@+id/textView46"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/blue_dark" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 2"
                android:id="@+id/textView47"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/blue_dark" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 3"
                android:id="@+id/text_add3"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/blue_dark" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_line3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State*"
                android:id="@+id/textView51"
                style="@style/TextviewStyle_space_dark_blue"
                android:textStyle="bold"
                android:textColor="@color/blue_dark" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/state_spin" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City*"
                    android:textStyle="bold"
                    android:id="@+id/textView48"
                    style="@style/TextviewStyle_space_dark_blue"
                    android:textColor="@color/blue_dark" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/state"
                    android:layout_below="@+id/textView49"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PinCode*"
                    android:textStyle="bold"
                    android:id="@+id/textView49"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="95dp"
                    android:layout_marginEnd="73dp"
                    style="@style/TextviewStyle_space_dark_blue"
                    android:textColor="@color/blue_dark" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pincode"
                    android:maxLength="6"
                    android:layout_alignBottom="@+id/state"
                    android:layout_alignLeft="@+id/textView49"
                    android:layout_alignStart="@+id/textView49" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
