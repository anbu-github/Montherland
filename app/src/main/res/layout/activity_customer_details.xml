<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re_layout"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/add1"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/title_color1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/website"
            android:layout_below="@+id/add1"
            android:layout_toRightOf="@+id/imageView2"
            android:textColor="@color/light_grey"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/secondary_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/light_grey"
            android:id="@+id/phone"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/website"
            android:layout_alignStart="@+id/website"
            android:textSize="@dimen/secondary_text_size"  />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/imageView2"
            android:src="@drawable/web"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/website"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/imageView3"
            android:src="@drawable/phone"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView3"
            android:background="#d5d6d9"
            android:id="@+id/view23" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/rl"
            android:layout_below="@+id/view23"
            android:background="@color/title_bar_color"
            android:layout_height="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Orders"
                android:textSize="20sp"

                android:id="@+id/textView10"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>




    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_below="@+id/re_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>