<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dev.montherland.CustomerDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Garment Factory"
        android:id="@+id/add1"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@color/light_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="www.garmentfactory.com"
        android:id="@+id/website"
        android:layout_below="@+id/add1"
        android:layout_toRightOf="@+id/imageView2"
        android:textColor="@color/light_grey"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/secondary_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8043588100"
        android:textColor="@color/light_grey"
        android:id="@+id/phone"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignLeft="@+id/website"
        android:layout_alignStart="@+id/website"
        android:textSize="@dimen/secondary_text_size"  />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:src="@drawable/web"

        android:layout_alignBottom="@+id/website"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView3"
        android:src="@drawable/phone"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
