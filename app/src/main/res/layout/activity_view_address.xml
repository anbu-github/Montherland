<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/container">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:weightSum="1.42">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal"

            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/detail_bk"
            android:weightSum="1.4"

            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.22">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.2"
                android:visibility="gone">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/displaytxtexamNameID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:text="Name"

                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:gravity="left"
                        android:paddingLeft="@dimen/detailsmargin">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/viewedit_name"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.2"
                android:visibility="gone">


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/displaytxtSubjectID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:text="Email"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:paddingLeft="@dimen/detailsmargin">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/viewedit_email"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.2"
                android:visibility="gone">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/diplaytxtSubjectCodeID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:text="Phone"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:gravity="left"
                        android:paddingLeft="@dimen/detailsmargin">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/viewedit_phone"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_weight="0.6">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="top"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/displaytxtDepartmentID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:text="Address"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:paddingLeft="@dimen/detailsmargin"
                        android:layout_marginTop="10dp">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="10dp">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp">

                    <TextView
                        android:id="@+id/viewedit_address1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/viewedit_address2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/viewedit_address3"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp">
                    </TextView>


                </LinearLayout>







            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.25">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/displaytxtDateID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:text="City"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black"
                        android:gravity="left"
                        android:paddingLeft="@dimen/detailsmargin">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/viewedit_city"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.25">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/displaytxtTimeID"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:text="State"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/state"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.25">




                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/displaypincode"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:text="Pincode"
                        android:paddingLeft="25dp"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit_pincode"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="left"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/color_black">
                    </TextView>


                </LinearLayout>







            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:visibility="gone"
            android:background="@color/color_white"
            android:gravity="center"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.85"
                    android:gravity="center">

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>






</FrameLayout>
