<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:weightSum="1"
    android:padding="10dp"
    android:id="@+id/createorderID">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" >

            <Button
                android:id="@+id/btn_Profile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Monthly Report"
                android:textColor="@color/color_black"
                android:background="@drawable/profile_active"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" >

            <Button
                android:id="@+id/btn_Psw"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Customer Report"
                android:background="@drawable/light_background"
                android:textColor="@color/color_black" >
            </Button>
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/detail_bk"
        android:layout_height="230dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Created Orders         :"
            android:id="@+id/textView10"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="30"
            android:id="@+id/textView11"
            android:layout_alignTop="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Inprogress Orders    :"
            android:id="@+id/textView30"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20"
            android:id="@+id/textView32"
            android:layout_alignTop="@+id/textView30"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Completed Orders    :"
            android:id="@+id/textView33"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView30"
            android:layout_alignLeft="@+id/textView30"
            android:layout_alignStart="@+id/textView30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10"
            android:id="@+id/textView40"
            android:layout_alignTop="@+id/textView33"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32" />

    </RelativeLayout>
</LinearLayout>
