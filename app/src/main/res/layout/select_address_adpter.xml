<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/select_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/graylight"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/add1"
                style="@style/SimpleTextviewStyle_16"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/add3"
                style="@style/SimpleTextviewStyle_16"
                android:layout_below="@+id/add1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/address_line3"
                style="@style/SimpleTextviewStyle_16"
                android:layout_below="@+id/add3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/state"
                style="@style/SimpleTextviewStyle_16"
                android:layout_below="@+id/address_line3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/add2"
                style="@style/SimpleTextviewStyle_16"
                android:layout_below="@+id/state"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/zipcode"
                style="@style/SimpleTextviewStyle_16"
                android:layout_below="@+id/add2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle_16"
                android:id="@+id/checkBox"
                android:visibility="visible"
                android:layout_below="@+id/add3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:checked="false"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/edit"
                android:layout_alignParentTop="true"
                android:src="@drawable/edit_18"
                android:layout_alignRight="@+id/checkBox"
                android:layout_alignEnd="@+id/checkBox"
                android:layout_above="@+id/add3"
                android:layout_alignLeft="@+id/delete"
                android:layout_alignStart="@+id/delete" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:src="@drawable/delete_18"
                android:layout_below="@+id/add2"
                android:layout_alignRight="@+id/checkBox"
                android:layout_alignEnd="@+id/checkBox"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>